<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' 
  xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:with field='res' type='com.google.mobile.trippy.web.client.TrippyBundle' />
  <ui:style>
    .textarea {
      width: 100%;
      vertical-align: middle;
      height: 7em;
    }

   .panel {
     padding:1em;
     vertical-align: middle;
    }

   .resizeAdd {
     margin-top: 10px;
     width: 8em;
   }
  </ui:style>
  <g:FlowPanel>
    <g:HTMLPanel styleName='{style.panel}'>
      <g:TextArea ui:field="commentText" styleName='{style.textarea} {res.commonStyle.baseFont}'>
      </g:TextArea>
      <g:Label ui:field="add" styleName='{res.commonStyle.button} {style.resizeAdd}'>Add comment</g:Label>
    </g:HTMLPanel>   
  </g:FlowPanel>
</ui:UiBinder>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <ui:style>
    .panel {
      color: #182647;
      width: 100%;
      height: 27px;
      line-height: 0px;
      font-size: 17px;
      font-weight: bold;
      text-align: center;
      text-shadow: 1 1px 0 #FFFFFF;
      margin-right: 5px;
    }
    
    .icon {
      margin: 5px;
      display: inline;
    }
    
    .tripsLabel {
      display: inline;
    }
    
    .right {
      float: right;
    }
    
    .left {
      float: left;
    }
    .buttonBase {
      border-width:4px 4px 5px;
      color:#2E4987;
      font-family:Arial;
      font-size:13px;
      font-size-adjust:none;
      font-stretch:normal;
      font-style:normal1;
      font-variant:normal;
      font-weight:bold;
      line-height:18px;
      min-width:20px;
      margin: 0 3px;
      position:relative;
      text-shadow:0 1px 0 #FFFFFF;
      z-index:0;
      \-moz-border-image: url('images/buttonNormal.png') 4 4 5 4;
      \-webkit-border-image: url('images/buttonNormal.png') 4 4 5 4;
   }
  .floatCss {
    float: left;
  }
  </ui:style>
  <g:FlowPanel styleName='{style.panel}'>
    <g:FlowPanel ui:field="leftItem" styleName="{style.left}">
      <g:FlowPanel>
        <g:FocusPanel ui:field="btnSearchIcon" styleName="{style.buttonBase} {style.floatCss}">
          <g:Image ui:field="leftItemIcon" addStyleNames="{style.icon}"/>
        </g:FocusPanel>
      </g:FlowPanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>

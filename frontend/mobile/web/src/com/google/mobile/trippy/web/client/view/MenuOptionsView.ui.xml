<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'>
  <ui:style>
    .panel {
      color: #182647;
      width: 100%;
      height: 27px;
      line-height: 0px;
      font-size: 17px;
      font-weight: bold;
      text-align: center;
      text-shadow: 1 1px 0 #FFFFFF;
    }
    
    .buttonBase {
      border-width:4px 4px 5px;
      color:#2E4987;
      font-family:Arial;
      font-size:13px;
      font-size-adjust:none;
      font-stretch:normal;
      font-style:normal;
      font-variant:normal;
      font-weight:bold;
      line-height:18px;
      min-width:20px;
      margin: 0 3px;
      position:relative;
      text-shadow:0 1px 0 #FFFFFF;
      z-index:0;
      \-moz-border-image: url('images/buttonNormal.png') 4 4 5 4;
      \-webkit-border-image: url('images/buttonNormal.png') 4 4 5 4;
   }
   
    .floatCss {
      float: left;
    }
    
     .icon {
      margin: 5px;
    }
    
    .right {
      float: right;
    }
  </ui:style>
  
  <g:FlowPanel styleName='{style.panel}'>
    <g:FlowPanel styleName="{style.buttonBase} {style.floatCss}">
      <g:Image ui:field="leftItemIcon" addStyleNames="{style.icon}"/>
    </g:FlowPanel>
    <g:FlowPanel ui:field="menuPanel" addStyleNames='{style.right}'/>
  </g:FlowPanel>
</ui:UiBinder>
